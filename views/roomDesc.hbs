               {{/if}}
            </ul>
            <form class="form-inline my-2 my-lg-0 d-flex justify-content-center" action="/getCity" method="POST" class="was-validated" >
               <div class="form-group">
                  
                     <label style="color:white; padding-right:5px;"for="City">City</label>
                     <select id="City" name="City" class="form-control">
                        <option>All Locations</option>
                        <option>Toronto</option>
                        <option>Montreal</option>
                        <option>Alberta</option>
                        <option>Calgary</option>
                     </select>
                
               </div>
                <div class="form-group" style="color:white; padding-left:5px;">
               <button class="btn btn-outline-success my-2 my-sm-0" style="color:white; padding-left:5px;" type="submit">Search</button>
            </div>
            </form>
         </div>
      </nav>
      <div class="d-flex justify-content-center" style="height: 500px; background-color:aquamarine"  id="section1">
         <div class="py-5">
            <h1>Unique Stays</h1>
            <h3>Browse our unique collection of destinations</h3>
         </div>
      </div>
      <div class="py-5" id="section2">
         <h1 class="text-center">Rooms</h1>
         <div class="container">
            <div class="row">
               {{#each ctData}}
               <div class="col-md-8">
                  <div class="card" id={{_id}} style="width: 100vh;">
                     <img class="card-img-top" src="/images/{{image}}" alt="Card image cap">
                     <div class="card-body">
                        <h5 class="card-title">{{rName}}</h5>
                        <h5 class="card-title">${{rPrice}} Per Night</h5>
                        <p class="card-text">{{rDesc}}</p>
                        <p class="card-text">{{City}}</p>
                        <form id= "roomForm" style="border-radius:15px;" class="form-signin"  action="/book" method="POST">
                           <div class="col-xs-4">
                              <label for="example-date-input" >Check-In</label>
                              <input class="form-control" type="date" name="checkin" id="checkin" value="2011-08-19">
                           </div>
                           <div class="col-xs-4">
                              <label for="example-date-input" >Check-Out</label>
                              <input class="form-control" type="date" name="checkout" id="checkout" value="2011-08-19" >
                           </div>
                           <input class="form-control" type="hidden" name="pr" id="pr" value="{{rPrice}}">
                               <div class="col-xs-4">
                              </br>
                              <div class="text-center">
                                 <input class="btn btn-primary text-center" type="submit" value="Book">
                              </div>
                           </div>
                     </form>
                  </div>
               </div>
            </div>
            {{/each}}
         </div>
      </div>
      </div>
   <footer class="footer bg-dark" style="height: 300px;">
      
        
           <div class="d-flex justify-content-center mx-auto">
           
              <div class="d-flex flex-column">

                     <h5 style="margin:auto; padding-top:100px;">Contact Us</h5>
