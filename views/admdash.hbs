      <div class="d-flex justify-content-center" style="height: 200px; background-color:aquamarine"  id="section1">
         <div class="py-5">
            <h1>Unique Stays</h1>
            <h3>Browse our unique collection of destinations</h3>
         </div>
      </div>
      <div class="d-flex justify-content-center" style="height: 800px; background-color:aquamarine"  id="section1">
         <div class="py-1 w-100" >
            <div id="theOne">
               <form id= "roomForm" style="border-radius:15px;" class="form-signin"  action="/addRoom" method="POST" class="was-validated" enctype="multipart/form-data">
                  <button type="button" class="btn btn-outline-secondary" id="buttOne" onClick="myFunction1()">Add</button>
                  <button type="button" class="btn btn-outline-secondary" id="buttTwo" onclick="myFunction2()">Update</button>
                  <button type="button" class="btn btn-outline-secondary" id="buttThree" onclick="myFunction3()">Delete</button>
                  <hr>
                  </hr>
                  <div class="form-group">
                     <label for="roomName">Room Name</label>
                     <input type="text" class="form-control"  name="rName" id="rName" placeholder="Enter Room Name" required>
                  </div>
                  <div class="form-group">
                     <label for="roomPrice">Room Price</label>
                     <input type="text" class="form-control" name="rPrice" id="rPrice" placeholder="Room Price" required>
                  </div>
                  <div class="form-group">
                     <label for="roomDesc">Room Description</label>
                     <input type="text" class="form-control" name="rDesc" id="psw" placeholder="Room Desc" required>
                  </div>
                  <div class="form-group">
                   <label for="City">City</label>
                    <select id="City" name="City" placeholder="City" class="form-control" required>
                        <option>Toronto</option>
                        <option>Montreal</option>
                        <option>Alberta</option>
                        <option>Calgary</option>
                     </select>
                  </div>
                  <div class="form-group">  <label for="photo">Photo ID</label>
                     <input id="photo" type="file" name="photo"/></br>
                  </div>
                  <div class="form-group">
                     <input type="submit" value="Submit File" />
                  </div>
               </form>
            </div>
            <div id="theTwo">
               <form id= "roomForm" style="border-radius:15px;" class="form-signin"  action="/updRoom" method="POST" class="was-validated">
                  <button type="button" class="btn btn-outline-secondary" id="buttOne" onClick="myFunction1()">Add</button>
                  <button type="button" class="btn btn-outline-secondary" id="buttTwo" onclick="myFunction2()">Update</button>
                  <button type="button" class="btn btn-outline-secondary" id="buttThree" onclick="myFunction3()">Delete</button>
                  <hr>
                  </hr>
                  <div class="form-group">
                     <label for="rName">Select Room</label>
                     <select class="form-control" name="rName" id="rName">
                        {{#each rmData}}
                        <option>{{rName}}</option>
                        {{/each}}
                     </select>
                  </div>
                  <div class="form-group">
                     <label for="roomName">Room Name</label>
                     <input type="text" class="form-control"  name="rnewName" id="rnewName" placeholder="Enter Room Name" required>
                  </div>
                  <div class="form-group">
                     <label for="roomPrice">Room Price</label>
                     <input type="text" class="form-control" name="rnewPrice" id="rnewPrice" placeholder="Room Price" required>
                  </div>
                  <div class="form-group">
                     <label for="roomDesc">Room Description</label>
                     <input type="text" class="form-control" name="rnewDesc" id="rnewDesc" placeholder="Room Desc" required>
                  </div>
                  <div class="form-group">
                     <input type="submit" value="Update" />
                  </div>
               </form>
            </div>
            <div id="theThree">
               <form id= "roomForm" style="border-radius:15px;" class="form-signin"  action="/delRoom" method="POST" class="was-validated">
                  <button type="button" class="btn btn-outline-secondary" id="buttOne" onclick="myFunction1()">Add</button>
                  <button type="button" class="btn btn-outline-secondary" id="buttTwo" onclick="myFunction2()">Update</button>
                  <button type="button" class="btn btn-outline-secondary" id="buttThree" onclick="myFunction3()">Delete</button>
                  <hr>
                  </hr>
                  <div class="form-group">
                     <label for="rName">Select Room</label>
                     <select class="form-control" name="rName" id="rName">
                        {{#each rmData}}
                        <option>{{rName}}</option>
                        {{/each}}
                     </select>
                  </div>
                  
                  <div class="form-group">
                     <input type="submit" value="Delete" />
                  </div>
               </form>
            </div>
           
